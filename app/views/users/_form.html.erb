<%= form_for @user do |u| %> 
  <%= u.label :name %>
  <%= u.text_field :name, :required => true, :autofocus => true %>

  <%= u.label :image %>
  <%= u.url_field :image %>

  <%= u.label :about %>
  <%= u.text_field :about %>

  <%= u.check_box :has_backyard %>
  <%= u.label :has_backyard, "Do you have a fenced backyard?" %>

  <%= u.label :upload_backyard_image %>
  <%= u.url_field :backyard_image %>

  <%= u.submit %>
<% end  %>
