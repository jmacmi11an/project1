<%= form_for(@user, :html => {:multipart => true}) do |u| %>
  <%= u.label :name %>
  <%= u.text_field :name, :required => true, :autofocus => true %>

  <%= u.label "Profile Photo" %>
  <%= u.cl_image_upload :image %>

  <%= u.label :about %>
  <%= u.text_field :about %>

  <%= u.check_box :has_backyard %>
  <%= u.label :has_backyard, "Do you have a fenced backyard?" %>

  <%= u.label :upload_backyard_image %>
  <%= u.url_field :backyard_image %>

  <%= u.label :has_pets, "Do you have any other pets?" %>
  <%= u.check_box :has_pets %>

  <%= u.label :pet_number, "How many?" %>
  <%= u.number_field(:pet_number, step: 1.0) %>

  <%= u.label :pet_type %>
  <p>(nothing here for now, I want to find a way later to choose between cat, dog or both)</p>

  <%= u.submit %>
<% end  %>
