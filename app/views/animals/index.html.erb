<h1>Animals</h1>

<h2>Cats</h2>
<% @animals.each do |animal|  %>
  <% if animal.species == 'cat' %>
    <% if animal.image != nil %>
      <%=  link_to image_tag(animal.image, :class => 'thumb'), animal%>
    <% else %>
      <%= link_to animal.name, animal %>
    <% end %>
  <% end %>
<% end %>

