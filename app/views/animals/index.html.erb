<div class="row justify-content-center my-3">
  <h1>Create happiness. Save lives.</h1>
</div>

<div class="row">

  <div class="col-md-6">
    <h2>Cats</h2>
    <% @animals.each do |animal|  %>
      <% if animal.species == 'cat' %>
        <% if animal.image != nil %>
          <%=  link_to image_tag(animal.image, :class => 'thumb'), animal%>
        <% else %>
          <%= link_to animal.name, animal %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="col-md-6">
    <h2>Dogs</h2>
    <% @animals.each do |animal|  %>
      <% if animal.species == 'dog' %>
        <% if animal.image != nil %>
          <%=  link_to image_tag(animal.image, :class => 'thumb'), animal%>
        <% else %>
          <%= link_to animal.name, animal %>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
